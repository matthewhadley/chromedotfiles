{
  "extends": "eslint:recommended",
  "rules": {
    "quotes": [1, "single"],
    "strict": [2, "global"],
    "eqeqeq": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "consistent-this": [2, "self"],
    "consistent-return": 0,
    "no-use-before-define": [2, "nofunc"],
    "camelcase": 0,
    "eol-last": 0,
    "no-console": 0,
    "curly": 2,
    "one-var": [2, "never"],
    "brace-style": [2, "1tbs", { "allowSingleLine": false }],
    "semi": [2, "always"]
  },
  "globals": {
    "chrome": true
  },
  "env":{
    "browser": true,
    "node": true
  }
}

