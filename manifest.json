{
  "manifest_version": 3,
  "name": "Chrome dotfiles",
  "version": "2.0.0",
  "description": "inject js and css into chrome tabs",
  "icons": {
     "128": "icon-128.png",
     "48": "icon-48.png"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
